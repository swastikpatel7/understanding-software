---
import PageLayout from '../layouts/PageLayout.astro';
import SectionDivider from '../components/astro/SectionDivider.astro';
import Footer from '../components/astro/Footer.astro';
import TableOfContents from '../components/react/TableOfContents.tsx';
import LayerCard from '../components/react/LayerCard.tsx';
import InteractiveSVGWrapper from '../components/react/illustrations/InteractiveSVGWrapper.tsx';
import SoftwareStackBannerSVG from '../components/react/illustrations/SoftwareStackBannerSVG.tsx';
import ViewportCornerMarks from '../components/decorative/ViewportCornerMarks.tsx';
import CircuitPatternBackground from '../components/decorative/CircuitPatternBackground.tsx';
import FloatingGridOverlay from '../components/decorative/FloatingGridOverlay.tsx';
import { SectionAnnotations } from '../components/decorative/FloatingTechAnnotation.tsx';
import { LAYERS, AVAILABLE_LAYERS, COMING_SOON_LAYERS } from '../content/layers';

const availableLayers = AVAILABLE_LAYERS;
const comingSoonLayers = COMING_SOON_LAYERS;

const philosophyItems = [
  {
    number: "01",
    title: "Mechanism First",
    body: "What's stored, what changes, what invariants hold. We explain the moving parts before the patterns.",
  },
  {
    number: "02",
    title: "Visual Anchors",
    body: "Strong diagrams beat walls of text. Every concept has an illustration that shows the structure.",
  },
  {
    number: "03",
    title: "Trade-offs Always",
    body: "Nothing is free. Every design choice has costs—we show them so you can reason about alternatives.",
  },
];
---

<PageLayout title="Code Blueprint - Understanding Software from Transistors to Transformers">
  <div class="min-h-screen relative noise-overlay">
    <!-- Global viewport corner marks -->
    <ViewportCornerMarks client:load />

    <!-- Subtle floating grid overlay -->
    <FloatingGridOverlay client:visible />

    <TableOfContents
      client:idle
      items={[
        { id: "intro", label: "Overview", number: "00" },
        { id: "philosophy", label: "Philosophy", number: "01" },
        { id: "layers", label: "The Stack", number: "02" },
        { id: "roadmap", label: "Roadmap", number: "03" },
      ]}
    />

    <SectionDivider variant="technical" />

    <!-- Hero Section -->
    <section id="intro" class="relative z-10 py-12 md:py-20 container mx-auto px-8 md:px-16 scroll-mt-8">
      <CircuitPatternBackground client:visible variant="hero" />
      <SectionAnnotations client:visible sectionId="intro" />

      <div class="mb-12">
        <InteractiveSVGWrapper client:visible className="w-full">
          <SoftwareStackBannerSVG client:visible />
        </InteractiveSVGWrapper>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
          <div class="space-y-6">
            <p class="font-body text-lg leading-relaxed">
              <span class="text-4xl font-body float-left mr-2 leading-none text-primary">
                S
              </span>
              oftware is layers. From transistors to transformers, each layer
              builds on the last—hiding complexity, enabling abstraction,
              creating the systems we use every day.
            </p>

            <p class="font-body leading-relaxed text-muted-foreground">
              Code Blueprint is a visual blueprint of the full stack.
              Not tutorials. Not code snippets. The actual mechanisms—how
              things work, why they break, and the trade-offs that shape every
              system.
            </p>
          </div>

          <div class="space-y-6">
            <p class="font-body leading-relaxed text-muted-foreground">
              This is for builders who want to understand, not just use. When
              you can explain the mechanism, you can debug the abstraction.
            </p>

            <div class="border border-border/50 rounded-none bg-card/30 backdrop-blur-sm p-6">
              <p class="font-mono text-[10px] text-muted-foreground uppercase tracking-widest mb-4">
                The Journey
              </p>
              <div class="space-y-2 font-mono text-xs">
                <div class="flex items-center gap-3">
                  <span class="text-primary w-4">0</span>
                  <span class="text-muted-foreground">→</span>
                  <span>Transistors & Logic Gates</span>
                </div>
                <div class="flex items-center gap-3">
                  <span class="text-primary w-4">↓</span>
                  <span class="text-muted-foreground"></span>
                  <span class="text-muted-foreground text-[10px]">abstraction</span>
                </div>
                <div class="flex items-center gap-3">
                  <span class="text-primary w-4">9</span>
                  <span class="text-muted-foreground">→</span>
                  <span>Quantum Computing & AI</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <SectionDivider variant="gradient" />

    <!-- Philosophy Section -->
    <section id="philosophy" class="relative z-10 py-12 md:py-20 container mx-auto px-8 md:px-16 scroll-mt-8">
      <CircuitPatternBackground client:visible variant="philosophy" />
      <SectionAnnotations client:visible sectionId="philosophy" />

      <div class="max-w-5xl mx-auto">
        <div class="flex items-center gap-3 mb-10">
          <span class="font-mono text-xs text-muted-foreground uppercase tracking-widest">
            Engineering Blueprint, Not Tutorial
          </span>
          <div class="h-px flex-1 bg-border"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <div class="border border-border/50 rounded-none bg-card/30 p-6">
            <div class="flex items-center gap-2 mb-4">
              <span class="font-mono text-xs text-muted-foreground line-through">Tutorial Site</span>
            </div>
            <ul class="space-y-2 font-body text-sm text-muted-foreground">
              <li>"How to implement X"</li>
              <li>Step-by-step instructions</li>
              <li>Code snippets to copy</li>
              <li>"Use this library"</li>
            </ul>
          </div>

          <div class="border border-primary rounded-none bg-card/30 p-6">
            <div class="flex items-center gap-2 mb-4">
              <span class="font-mono text-xs text-primary uppercase tracking-wider">This Site</span>
            </div>
            <ul class="space-y-2 font-body text-sm text-foreground">
              <li>"How X works underneath"</li>
              <li>First-principles reasoning</li>
              <li>Mental models to internalize</li>
              <li>Trade-offs and constraints</li>
            </ul>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {philosophyItems.map((item) => (
            <div class="border border-border/50 rounded-none bg-card/30 backdrop-blur-sm p-6">
              <span class="font-mono text-[10px] text-muted-foreground">{item.number}</span>
              <h3 class="font-display text-lg text-primary mb-3 mt-1">{item.title}</h3>
              <p class="font-body text-sm text-muted-foreground leading-relaxed">{item.body}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <SectionDivider variant="technical" label="structure" />

    <!-- Layers Section -->
    <section id="layers" class="relative z-10 py-12 md:py-20 container mx-auto px-8 md:px-16 scroll-mt-8">
      <CircuitPatternBackground client:visible variant="stack" />
      <SectionAnnotations client:visible sectionId="layers" />

      <div class="max-w-6xl mx-auto">
        <div class="space-y-3 mb-10">
          <div class="flex items-center gap-3">
            <h2 class="font-display text-2xl md:text-3xl text-primary">THE STACK</h2>
            <div class="h-px flex-1 bg-border"></div>
            <span class="font-mono text-xs text-muted-foreground">
              {LAYERS.length} LAYERS
            </span>
          </div>
          <p class="font-body text-muted-foreground leading-relaxed max-w-3xl">
            From silicon to intelligence. Each layer builds on the last, hiding complexity
            and enabling the next level of abstraction.
          </p>
        </div>

        <!-- Available Layers -->
        <div class="mb-12">
          <div class="flex items-center gap-2 mb-6">
            <span class="font-mono text-[10px] uppercase tracking-wider text-primary">
              Available Now
            </span>
            <div class="h-px flex-1 bg-primary/30"></div>
            <span class="font-mono text-[10px] text-primary">
              {availableLayers.length} layers
            </span>
          </div>

          <div class="space-y-4">
            {availableLayers.map((layer) => (
              <LayerCard client:visible layer={layer} />
            ))}
          </div>
        </div>

        <!-- Coming Soon Layers -->
        <div>
          <div class="flex items-center gap-2 mb-6">
            <span class="font-mono text-[10px] uppercase tracking-wider text-muted-foreground">
              Coming Soon
            </span>
            <div class="h-px flex-1 bg-border/50"></div>
            <span class="font-mono text-[10px] text-muted-foreground">
              {comingSoonLayers.length} layers
            </span>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {comingSoonLayers.map((layer) => (
              <div class="relative border border-border/30 bg-card/10 p-5">
                <div class="absolute -left-px -top-px w-10 h-10 flex items-center justify-center border-r border-b border-border/30 bg-muted/30 text-muted-foreground">
                  <span class="font-mono text-sm">{layer.number}</span>
                </div>

                <div class="pl-12">
                  <h3 class="font-display text-base text-muted-foreground uppercase tracking-wide mb-1">
                    {layer.title}
                  </h3>
                  <p class="font-mono text-[10px] text-muted-foreground/70 italic mb-2">
                    "{layer.tagline}"
                  </p>
                  <p class="font-body text-xs text-muted-foreground/80 leading-relaxed">
                    {layer.chapters.length} chapters planned
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <SectionDivider variant="gradient" />

    <!-- Roadmap / Progress Section -->
    <section id="roadmap" class="relative z-10 py-12 md:py-20 container mx-auto px-8 md:px-16 scroll-mt-8">
      <CircuitPatternBackground client:visible variant="roadmap" />
      <SectionAnnotations client:visible sectionId="roadmap" />

      <div class="max-w-4xl mx-auto">
        <div class="flex items-center gap-3 mb-10">
          <span class="font-mono text-xs text-muted-foreground uppercase tracking-widest">
            Progress
          </span>
          <div class="h-px flex-1 bg-border"></div>
        </div>

        <!-- Visual progress bar -->
        <div class="mb-10 relative">
          <div class="absolute inset-0 -inset-y-2 pointer-events-none">
            <div
              class="h-full"
              style={`background: linear-gradient(90deg, hsl(var(--primary) / 0.05) 0%, hsl(var(--primary) / 0.05) ${(availableLayers.length / LAYERS.length) * 100}%, transparent ${(availableLayers.length / LAYERS.length) * 100}%)`}
            />
          </div>

          <div class="flex items-center gap-1 mb-3 relative">
            {LAYERS.map((layer, index) => (
              <div
                class={`flex-1 h-8 flex items-center justify-center border transition-all duration-500 ${
                  layer.status === "available"
                    ? "border-primary bg-primary/20 text-primary"
                    : "border-border/30 bg-muted/10 text-muted-foreground/50"
                }`}
                style={`animation-delay: ${index * 0.1}s`}
              >
                <span class="font-mono text-xs">{layer.number}</span>
              </div>
            ))}
          </div>
          <div class="flex justify-between font-mono text-[10px] text-muted-foreground relative">
            <span>Hardware</span>
            <span>{Math.round((availableLayers.length / LAYERS.length) * 100)}% Complete</span>
            <span>Frontier</span>
          </div>
        </div>

        <div class="text-center space-y-6">
          <p class="font-body text-muted-foreground leading-relaxed">
            Layer 0 and Layer 1 are ready. The remaining 8 layers are in development.
            Follow along as we build out the complete stack.
          </p>

          <a
            href="/layer/the-machine"
            class="inline-flex items-center gap-2 px-8 py-3 border-2 border-primary text-primary font-mono text-sm uppercase tracking-wider hover:bg-primary hover:text-primary-foreground transition-all duration-300"
          >
            Begin at Layer 0
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <Footer />
  </div>
</PageLayout>
